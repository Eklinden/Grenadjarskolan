---
import '../styles/global.css';

const {
  title = 'Grenadjärskolan',
  description = 'En varm och välkomnande skola i hjärtat av Örebro.'
} = Astro.props;
---
<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main">Hoppa till innehållet</a>
    <header class="site-header" role="banner">
      <div class="container header-inner">
        <div class="branding">
          <span class="logo" aria-hidden="true">G</span>
          <div class="brand-text">
            <span class="brand-name">Grenadjärskolan</span>
            <span class="brand-tagline">Kunskap, omsorg och framtidstro</span>
          </div>
        </div>
        <nav aria-label="Huvudmeny">
          <ul class="nav-list">
            <li><a href="/">Hem</a></li>
            <li><a href="/#om">Om skolan</a></li>
            <li><a href="/#program">Program</a></li>
            <li><a href="/#vardag">Skolvardag</a></li>
            <li><a href="/larare">Vårt team</a></li>
            <li><a href="/skolmat">Skolmat</a></li>
            <li><a href="/#kontakt">Kontakt</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main" class="main-content">
      <slot />
    </main>
    <footer class="site-footer" role="contentinfo">
      <div class="container footer-inner">
        <div>
          <h2 class="footer-heading">Grenadjärskolan</h2>
          <p>Grenadjärsgatan 1, 702 17 Örebro</p>
          <p>
            <a href="tel:+4619213950">019-21 39 50</a> ·
            <a href="mailto:grenadjarskolan@orebro.se">grenadjarskolan@orebro.se</a>
          </p>
        </div>
        <div>
          <h2 class="footer-heading">Snabblänkar</h2>
          <ul class="footer-list">
            <li><a href="/">Hem</a></li>
            <li><a href="/#om">Om skolan</a></li>
            <li><a href="/#program">Våra program</a></li>
            <li><a href="/larare">Vårt team</a></li>
            <li><a href="/skolmat">Matsedel</a></li>
            <li><a href="/#kontakt">Kontakta oss</a></li>
          </ul>
        </div>
        <div>
          <h2 class="footer-heading">Tillgänglighet</h2>
          <p>Vi arbetar aktivt för att vår skola och webbplats ska vara tillgängliga för alla. Kontakta oss gärna om du har synpunkter.</p>
        </div>
      </div>
      <p class="footer-bottom">© {new Date().getFullYear()} Grenadjärskolan. Alla rättigheter förbehållna.</p>
    </footer>
    <script is:inline>
      const header = document.querySelector('.site-header');
      let lastScrollY = window.scrollY;
      let ticking = false;

      const updateHeaderVisibility = () => {
        const currentY = window.scrollY;
        if (!header) return;

        const isScrollingDown = currentY > lastScrollY;
        const shouldHide = currentY > 120 && isScrollingDown;

        header.classList.toggle('site-header--hidden', shouldHide);

        lastScrollY = currentY;
        ticking = false;
      };

      window.addEventListener(
        'scroll',
        () => {
          if (!ticking) {
            window.requestAnimationFrame(updateHeaderVisibility);
            ticking = true;
          }
        },
        { passive: true }
      );
    </script>
  </body>
</html>
